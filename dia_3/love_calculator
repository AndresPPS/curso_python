print("Welcome to the Love Calculator!")
name1 = input("What is your name?")
name2 = input("What is their name? \n")
# ðŸš¨ Don't change the code above ðŸ‘†

#Write your code below this line ðŸ‘‡
name1 = name1.lower()
name2 = name2.lower()

name3 = name1 + name2

count_t = name3.count("t")
count_r = name3.count("r")
count_u = name3.count("u")
count_e = name3.count("e")

count_true = count_t + count_r + count_u + count_e 

count_l = name3.count("l")
count_o = name3.count("o")
count_v = name3.count("v")
count_e2 = name3.count("e")

count_love = count_l + count_o + count_v + count_e2
count_total = str(count_true)+str(count_love)
love_score = int(count_total)

if love_score < 10 or love_score > 90:
    print(f"Your score is {love_score}, you go together like coke and mentos.")
elif love_score > 40 and love_score < 50:
    print(f"Your score is {love_score}, you are alright together.")
else:
    print(f"Your score is {love_score}.")
